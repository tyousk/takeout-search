<div class="contents new">
  <div class="sign-up">
    <h2>新規登録画面</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label 'メールアドレス' %><br />
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label 'パスワード（半角英数字をそれぞれ1種類以上含む8文字以上100文字以下）' %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label 'パスワード確認' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label 'ユーザーネーム' %> <em></em><br />
        <%= f.text_field :nickname, autofocus: true, maxlength: "20" %>
      </div>

      <div class="field">
        <%= f.label '名字' %> <em></em><br />
        <%= f.text_field :last_name, autofocus: true, maxlength: "20" %>
      </div>

      <div class="field">
        <%= f.label '名字（フリガナ）' %> <em>(カタカナのみ)</em><br />
        <%= f.text_field :last_name_kana, autofocus: true, maxlength: "20" %>
      </div>

      <div class="field">
        <%= f.label '名前' %> <em></em><br />
        <%= f.text_field :first_name, autofocus: true, maxlength: "20" %>
      </div>

      <div class="field">
        <%= f.label '名前（カナ）' %> <em>(カタカナのみ)</em><br />
        <%= f.text_field :first_name_kana, autofocus: true, maxlength: "20" %>
      </div>

      <div class='input-birth-wrap'>
        <%= f.label '誕生日'%> <br />
        <%= raw sprintf(
                    f.date_select(
                      :birth_day,class:'select-birth',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 1930,
                      end_year: (Time.now.year - 5),
                      date_separator: '%s'),
                    "<div> 年 </div>", "<div> 月 </div>") + "<div> 日 </div>" %>
      </div>
      <div class="field">
      <%= f.label '性別'%> <br />
      <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"select-box", id:"gender-category"}) %>
      </div>
      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
  </div>
</div>