<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8"/>
  <title>TakeoutSearch</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

  <body>
    <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6"><a href="/">TakeOutSearch</a></h1>
        <% if user_signed_in? %>
          <div class="user_nav grid-6">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
            <%= link_to "投稿する", new_post_path, class: "post" %>
          </div>
        <% else %>
          <div class="grid-6">
            <%= link_to "ログイン", new_user_session_path, class: "post" %>
            <%= link_to "新規登録", new_user_registration_path, class: "post" %>
          </div>
        <% end %>
      </div>
    </header>
    <main>
      <div class="side-area">
          <p>カテゴリ</p>
          <%= form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |form| %>
            <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
            <%= form.submit "検索", class: "search-btn" %>
          <% end %>
          <p>カテゴリ</p>
          <%= search_form_for @q, url: post_category_path do |f| %>
              <%= f.collection_select :category_id_eq, Category.where.not(id: 0), :id, :name, include_blank: "料理のジャンル検索" %>
              <%= f.submit '検索' %>
          <% end %>
          <p>カテゴリ</p>
          <%= search_form_for @p, url: post_prefecture_path do |f| %>
              <%= f.collection_select :prefecture_id_eq, Prefecture.where.not(id: 0), :id, :name, include_blank: "都道府県名検索" %>
              <%= f.submit '検索' %>
          <% end %>
      </div>
    
      <%= yield %>

    </main>
    <footer>
      <p>
      </p>
    </footer>
  </body>
</html>
