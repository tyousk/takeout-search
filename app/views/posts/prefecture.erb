<div class="side-area">
		<p>カテゴリ</p>
		<%= form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |form| %>
			<%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
			<%= form.submit "検索", class: "search-btn" %>
		<% end %>
		<p>カテゴリ</p>
		<%= search_form_for @q, url: post_category_path do |f| %>
				<%= f.collection_select :category_id_eq, Category.where.not(id: 0), :id, :name, include_blank: "料理のジャンル検索" %>
				<%= f.submit '検索' %>
		<% end %>
		<p>カテゴリ</p>
		<%= search_form_for @p, url: post_prefecture_path do |f| %>
				<%= f.collection_select :prefecture_id_eq, Prefecture.where.not(id: 0), :id, :name, include_blank: "都道府県名検索" %>
				<%= f.submit '検索' %>
		<% end %>
</div>
<div class="content-area">
	<% @posts.each do |post| %>
		<div class='content'>
			<h3 class='cooking-name'>
				<%= post.cooking_name%>
			</h3>
			<div class='price'>
				<span>値段：<%= post.price %>円<br>
			</div>
			<div class='category-id'>
				<span>ジャンル：<%= post.category.name %><br>
			</div>
			<%= link_to (image_tag post.image), post_path(post.id) %>
			<div class='content-link'>
				<%= link_to '詳細', post_path(post.id), method: :get %>
				<% if user_signed_in? && current_user.id == post.user_id %>
					<%= link_to '削除', "/posts/#{post.id}", method: :delete %>
					<%= link_to '編集', edit_post_path(post.id), method: :get %>
				<% end %>
			</div>
		</div>
	<% end %>
</div>