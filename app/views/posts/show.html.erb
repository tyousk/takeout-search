<div class="contents row">

    <div class="more">
      <%= image_tag @post.image %>
      <% if user_signed_in? && current_user.id == @post.user_id %>
        <ul class="more_list">
          <li>
            <%= link_to '編集', edit_post_path(@post.id), method: :get %>
          </li>
          <li>
            <%= link_to '削除', post_path(@post.id), method: :delete %>
          </li>
        </ul>
      <% end %>
    </div>
    <div class='post-info'>
      <h3 class='cooking-name'>
        <%= @post.cooking_name%>
      </h3>
      <div class='price'>
        <span><%= @post.price %>円<br>
      </div>
      <div class='category-id'>
        <%= @post.category.name %>
      </div>
      <div class='store-name'>
        <%= @post.store_name %>
      </div>
      <div class='opening'>
        <span><%= @post.opening %>開店<br>
      </div>
      <div class='closing'>
        <span><%= @post.closing %>閉店<br>
      </div>
      <div class='prefecture-id'>
        <%= @post.prefecture.name %>
      </div>
      <div class='city'>
        <%= @post.city %>
      </div>
      <div class='address'>
        <%= @post.address %>
      </div>
      <div class='building'>
        <%= @post.building %>
      </div>
    </div>

</div>